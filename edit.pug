html
  head
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    div(class="text-center border border-info w-25 p-2 m-2")
      h1 Edit
      form(action=`/review/update/${i}` method="post")
        input(type="text" value=`${j.name}` name="name" class="form-control w-75 ")
        input(type="text" value=`${j.rating}` name="rating" class="form-control w-75 ")
        input(type="text" value=`${j.review}` name="review" class="form-control w-75 ")
        input(type="text" value=`${j.image}` name="image" class="form-control w-75")
        div(class="text-center mt-3") 
          button(type="submit" class="btn btn-success") Update
